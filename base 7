class Solution:
    def convertToBase7(self, num: int) -> str:
        c=""
        sign=""
        if num==0:
            return "0"
        if num<0:
            sign="-"
            num=-num
        while num>0:
            k=num%7
            c+=str(k)
            num=num//7
        return sign+c[::-1]
